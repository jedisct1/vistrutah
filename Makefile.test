# Makefile for testing Vistrutah specification compliance

CC = clang
CFLAGS = -O3 -march=armv8-a+crypto -Wall -Wextra
LDFLAGS = 

# Source files
SRCS = vistrutah_common.c vistrutah.c vistrutah_fixed.c test_spec_compliance.c
OBJS = $(SRCS:.c=.o)

# Target
TARGET = test_spec

# Build rules
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all run clean