# Makefile for patched Vistrutah implementation

CC = clang
CFLAGS = -O3 -march=armv8-a+crypto -Wall -Wextra -DVISTRUTAH_ARM
LDFLAGS = 

# Source files
SRCS = vistrutah_common.c vistrutah_patched.c test_comprehensive.c
OBJS = $(SRCS:.c=.o)

# Target
TARGET = test_patched

# Build rules
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all run clean